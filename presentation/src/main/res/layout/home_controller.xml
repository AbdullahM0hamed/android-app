<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/home_drawer"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fitsSystemWindows="true">

  <androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/home_coordinator_bottomnav"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <tachiyomi.ui.widget.InsetsChangeHandlerFrameLayout
      android:id="@+id/home_controller_container"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />

    <tachiyomi.ui.widget.DelegateCoordinatorLayout
      android:id="@+id/home_fab_container"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_anchor="@id/home_bottomnav"
      app:layout_anchorGravity="end"
      app:layout_dodgeInsetEdges="bottom" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
      android:id="@+id/home_bottomnav"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom"
      app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior"
      app:layout_insetEdge="bottom"
      app:menu="@menu/home_bottomnav_menu" />

  </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.drawerlayout.widget.DrawerLayout>
